disk_size_gb      = 40

ssh_public_keys     = "ssh-ed25519 AAAA... user@example"
cloud_init_user     = "talos"
cloud_init_password = "changeme"

# Talos cluster configuration
talos_cluster_name     = "bootstrap-cluster"
talos_cluster_endpoint = "10.0.0.100"       # IP address of the bootstrap node
cluster_domain         = "cluster.local"
